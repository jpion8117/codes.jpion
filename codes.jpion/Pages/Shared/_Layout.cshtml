@{
    var current = Context.Request.Path;
    var activeLinks = new Dictionary<string, bool>
    {
        { "home", current.Value == "/" },
        { "about", current.Value?.ToLower().Contains("about") ?? false }
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - jpion.codes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/codes.jpion.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geostar+Fill&display=swap" rel="stylesheet">
</head>
<body data-bs-theme="light" class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-black border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand geostar-fill-regular text-white" asp-area="" asp-page="/Index">Josh Pion</a>
                <button class="navbar-toggler" type="button" data-bs-theme="dark" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 nav-underline">
                        <li class="nav-item">
                            <a class="nav-link text-white @(activeLinks["home"] ? "active" : "")" asp-area="" asp-page="/Index"><i class="fa-sharp-duotone fa-solid fa-house-chimney" style="--fa-primary-color: #faebd7; --fa-secondary-color: #ffd7a3;"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(activeLinks["about"] ? "active" : "")" asp-area="" asp-page="/About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="contact-box">
            <div class="text-center"><small>Contact Me</small></div>
            <div class="row row-cols-3">
                <div class="col"><i class="fa-sharp-duotone fa-solid fa-pen-field fa-sm" style="--fa-primary-color: #faebd7; --fa-secondary-color: #ffd7a3;"></i></div>
                <div class="col"><i class="fa-sharp fa-solid fa-at fa-sm"></i></div>
                <div class="col"><i class="fa-brands fa-linkedin" style="color: #faebd7;"></i></div>
            </div>
        </div>
    </header>
    <div class="container container-main shadow-frame d-flex flex-column flex-grow-1">
        <main role="main" class="h-100">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light text-muted bg-black">
        <div class="container">
            &copy; 2024 - codes.jpion - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/1eccba47d8.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>